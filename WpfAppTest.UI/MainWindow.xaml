<Window x:Class="WpfAppTest.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTest.UI"
        mc:Ignorable="d"
        xmlns:v="clr-namespace:WpfAppTest.UI.Views"
        xmlns:vm="clr-namespace:WpfAppTest.UI.ViewModels.ViewModels"
        Title="Gestion des contacts" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ContactListViewModel}">
            <v:ContactListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ContactDetailViewModel}">
            <v:ContactDetailView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="300"/>-->
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!--<RowDefinition Height="30"/>-->
        </Grid.RowDefinitions>

        <!--<Label Content="Nom" Grid.Row="0" Grid.Column="0"/>
        <TextBox Text="{Binding Contact.Firstname, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1"/>

        <Label Content="Prénom" Grid.Row="1" Grid.Column="0"/>
        <TextBox Text="{Binding Contact.Lastname, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"/>-->

        <!-- Zone de contenu dynamique -->
        <ContentControl Grid.Row="0" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
